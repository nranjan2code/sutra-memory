{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Desktop: Build Debug",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "sutra-desktop"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Build Sutra Desktop in debug mode"
        },
        {
            "label": "Desktop: Build Release",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "sutra-desktop",
                "--release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Build Sutra Desktop in release mode (optimized)"
        },
        {
            "label": "Desktop: Run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "-p",
                "sutra-desktop"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Run Sutra Desktop application",
            "dependsOn": "Desktop: Build Debug"
        },
        {
            "label": "Desktop: Build macOS App Bundle",
            "type": "shell",
            "command": "./desktop/scripts/build-macos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Build native macOS app bundle with DMG installer",
            "dependsOrder": "sequence"
        },
        {
            "label": "Desktop: Clean",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clean",
                "-p",
                "sutra-desktop"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Clean desktop build artifacts"
        },
        {
            "label": "All: Build All Services",
            "type": "shell",
            "command": "./sutra",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SUTRA_EDITION": "simple"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "detail": "Build all Sutra services using the unified CLI"
        },
        {
            "label": "All: Deploy Services",
            "type": "shell",
            "command": "./sutra",
            "args": [
                "deploy"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SUTRA_EDITION": "simple"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "detail": "Deploy all Sutra services using Docker Compose",
            "dependsOn": "All: Build All Services"
        },
        {
            "label": "Storage: Build Rust Package",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "sutra-storage",
                "--release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Build the core storage engine in Rust"
        },
        {
            "label": "Tests: Run Rust Tests",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--workspace",
                "--exclude",
                "sutra-desktop"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "detail": "Run all Rust tests (excluding desktop GUI tests)"
        },
        {
            "label": "Tests: E2E Tests",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test:e2e"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Run end-to-end tests with Playwright"
        }
    ]
}