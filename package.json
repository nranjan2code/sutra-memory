{
  "name": "sutra-models",
  "version": "0.1.0",
  "private": true,
  "description": "Sutra AI - Explainable Graph-Based Reasoning",
  "scripts": {
    "dev": "concurrently -n API,CLIENT -c cyan,magenta \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "source venv/bin/activate && cd packages/sutra-api && python -m sutra_api.main",
    "dev:client": "cd packages/sutra-client && npm run dev",
    "install:client": "cd packages/sutra-client && npm install",
    "build:client": "cd packages/sutra-client && npm run build",
    "test:e2e": "playwright test --project=continuous-learning",
    "test:e2e:all": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "comment": "NOTE: For hot-reload development, use: docker-compose -f docker-compose-grid.yml -f docker-compose.dev.yml up"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^24.10.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.0",
      "rimraf": "^6.0.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9"
      },
      "ignoreMissing": [
        "vite"
      ]
    }
  }
}
